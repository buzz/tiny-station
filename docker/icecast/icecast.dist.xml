<icecast>
  <location>${ICECAST_LOCATION}</location>
  <admin>${ICECAST_ADMIN_EMAIL}</admin>

  <limits>
    <clients>${ICECAST_CLIENTS}</clients>
    <sources>${ICECAST_SOURCES}</sources>
    <queue-size>524288</queue-size>
    <client-timeout>30</client-timeout>
    <header-timeout>15</header-timeout>
    <source-timeout>10</source-timeout>
    <!-- Same as burst-on-connect, but this allows for being more
             specific on how much to burst. Most people won't need to
             change from the default 64k. Applies to all mountpoints. -->
    <burst-size>65535</burst-size>
    <!--
        <max-bandwidth>100M</max-bandwidth>
        -->
  </limits>

  <authentication>
    <admin-user>${ICECAST_ADMIN_USER}</admin-user>
    <admin-password>${ICECAST_ADMIN_PASSWORD}</admin-password>
    <source-password>${ICECAST_SOURCE_PASSWORD}</source-password>
  </authentication>

  <!-- It affects mainly the urls generated by Icecast for playlists and yp listings. -->
  <hostname>${ICECAST_HOSTNAME}</hostname>

  <!-- You can use these two if you only want a single listening socket -->
  <listen-socket>
    <port>${ICECAST_PORT}</port>
    <tls>auto</tls>
  </listen-socket>

  <!-- Needed for Web Audio API/MediaSource -->
  <http-headers>
    <header type="cors" name="Access-Control-Allow-Origin" value="${ICECAST_HEADER_CORS_ORIGIN}" />
  </http-headers>

  <mount>
    <mount-name>/stream</mount-name>
    <username>${ICECAST_SOURCE_USER}</username>
    <password>${ICECAST_SOURCE_PASSWORD}</password>
  </mount>

  <!-- Notify web app when stream goes online/offline -->
  <event-bindings>
    <event type="url" trigger="source-connect">
      <option name="url" value="http://tiny-station:3001/ic/source-connect" />
    </event>
    <event type="url" trigger="source-disconnect">
      <option name="url" value="http://tiny-station:3001/ic/source-disconnect" />
    </event>
  </event-bindings>

  <fileserve>1</fileserve>

  <paths>
    <webroot>/usr/local/share/icecast/web</webroot>
    <adminroot>/usr/local/share/icecast/admin</adminroot>
    <alias source="/" destination="/status.xsl"/>
  </paths>

  <!-- Redirect logs to stderr -->
  <logging>
    <accesslog>-</accesslog>
    <errorlog>-</errorlog>
    <loglevel>${ICECAST_LOGLEVEL}</loglevel>    <!-- 4 Debug, 3 Info, 2 Warn, 1 Error -->
  </logging>

  <security>
    <chroot>false</chroot>
    <changeowner>
      <user>icecast</user>
      <group>icecast</group>
    </changeowner>
    <tls-context>
      <tls-certificate>/etc/icecast/fullchain.pem</tls-certificate>
      <tls-key>/etc/icecast/privkey.pem</tls-key>
    </tls-context>
    <prng-seed type="profile">linux</prng-seed>
  </security>
</icecast>
