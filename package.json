{
  "name": "listen-app",
  "description": "Icecast listen app",
  "version": "0.1.0",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "icecast",
    "stream",
    "audio",
    "chat"
  ],
  "author": {
    "name": "buzz",
    "url": "https://github.com/buzz"
  },
  "homepage": "https://github.com/buzz/listen-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/buzz/listen-app.git"
  },
  "scripts": {
    "build": "yarn frontend:build && yarn server:build",
    "frontend:build": "yarn workspace frontend build",
    "frontend:dev": "yarn workspace frontend dev",
    "format": "prettier --write \"*.js\" \"packages/**/*.js\"",
    "lint": "eslint .",
    "server:build": "yarn workspace server build",
    "server:dev": "yarn workspace server dev",
    "server:start": "yarn workspace server start",
    "start": "yarn server:start"
  },
  "eslintIgnore": [
    "/packages/frontend/dist",
    "/packages/server/dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "eslint": "<8.0.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1"
  },
  "dependencies": {
    "@babel/preset-react": "^7.14.5"
  }
}
