@import '../styles/_vars.sss'

.chat
  background: linear-gradient(179deg, $color-panel-bg-bright 0%, $color-panel-bg 100%)
  border-radius: $border-radius-default
  box-shadow: $box-shadow-default
  color: $color-base
  display: flex
  flex-direction: column
  flex-grow: 1
  overflow: hidden
  padding-top: 0.75rem

  > *:nth-child(2)
    background: linear-gradient(180deg, $color-panel-bg-dark 0%, color($color-panel-bg-dark l(+3%)) 100%)
    margin-top: 0.67rem
    padding: 1rem 1rem 0.8rem
