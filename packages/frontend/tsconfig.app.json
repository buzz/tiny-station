{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.frontend-app.tsbuildinfo",
    "target": "ES2020",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],

    // Vite Specifics
    "jsx": "react-jsx",
    "paths": {
      "#*": ["./src/*"]
    },

    // Extra Strictness for App Code
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true
  },
  "include": ["src"],
  "references": [{ "path": "../common" }]
}
